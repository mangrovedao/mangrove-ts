{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noErrorTruncation": true,
    "moduleResolution": "node",
    "sourceMap": true,    
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }    
  },
  "include": ["./src/**/*.ts"]
}